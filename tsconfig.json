{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2018.promise"],
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*"]
    },

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/testUtils/**"]
}
