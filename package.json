{
  "name": "we-cook-sometimes-server",
  "version": "0.0.0",
  "description": "API server to [we-cook-sometimes](github.com/andrew-chang-dewitt/we-cook-sometimes)",
  "main": "dist/server.js",
  "scripts": {
    "lint": "prettier --config .prettierrc.yaml --write './(*.html|*.js|*.json|src/**/*.ts)'",
    "test": "TS_NODE_FILES=true mocha 'src/**/*.spec.{ts,tsx}'",
    "test-one": "TS_NODE_FILES=true mocha $MATCH",
    "coverage": "nyc npm run test",
    "prebuild": "npm run lint && npm run coverage",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "$PORT=3001 node -r dotenv/config .",
    "dev": "tsc-watch -p tsconfig.json --noClear --onSuccess \"node -r dotenv/config .\""
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "lines": 99,
    "functions": 99,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/dist/**",
      "**/*.spec.ts"
    ]
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "require": "ts-node/register"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.3",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.3",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.33",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.1",
    "@types/node-fetch": "^2.5.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.1.2",
    "msw": "^0.21.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "ts-node": "^8.9.1",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  }
}
